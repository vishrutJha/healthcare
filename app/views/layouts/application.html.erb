<!DOCTYPE html>
<html>
  <head>
    <title>Healthcare</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>

  <body>
    <%= content_tag :div, class: "container", style: "width: 100%; padding: 10px;" do%>
      <% flash.each do |type, msg| %>
        <%= content_tag :div, :class => "#{flash_class(type)} alert alert-info alert_top_spacing" do%>
          <button class="close" data-dismiss="alert" type="button">
            &times;
          </button>
          <%= msg %>
        <% end %>
      <% end %>
      
      <%= content_tag :div, class: "panel panel-default", style: "padding: 10px;" do %>
        <%= render "layouts/overall_view" %>
        <%= yield %>
      <% end %>
    <% end %>
  </body>
</html>
